INCLUDES = -I. -I../../include -I../../src -I../.. -I../../util -I../../src/gc

objects= NetworkXioClient.o \
	libovsvolumedriver.o \
	NetworkXioInterface.o \
	NetworkXioIOHandler.o \
	NetworkXioServer.o

includeFiles = NetworkXioIOHandler.h NetworkXioHandler.h NetworkXioCommon.h common.h NetworkXioClient.h NetworkXioServer.h
all: $(objects) $(includeFiles)
	g++  --std=c++14 $(INCLUDES) $(objects) NetworkServerTest.cpp -o NetworkServerTest -L/usr/local/lib -L../../thirdparty/rocksdb/lib -L../../lib -L/usr/lib/x86_64-linux-gnu -lboost_log -lboost_thread -lboost_system -lboost_program_options -lxio -lpthread -lmsgpack -lglog -lgobjfs
	g++  --std=c++14 $(INCLUDES) $(objects) NetworkServer.cpp -o NetworkServer -L/usr/local/lib -L../../lib  -L../../thirdparty/rocksdb/lib -L/usr/lib/x86_64-linux-gnu -lboost_log -lboost_thread -lboost_system -lboost_program_options -lxio -lpthread -lmsgpack -lglog -lgobjfs
$(objects): %.o: %.cpp 
	g++ --std=c++14 -c $(INCLUDES) -g $^ -o $@

clean:
	rm -rf *.o
